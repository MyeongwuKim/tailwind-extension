{
   "manifest_version": 3,
   "name": "Tailwind Chrome Extension",
   "version": "1.0.0",
   "description": "CSS를 Tailwind 클래스로 변환하고, UI를 실시간으로 테스트할 수 있는 Tailwind 전용 크롬 확장 프로그램",
   "action": {
      "default_popup": "popup/index.html"
   },
   "options_page": "options/index.html",
   "background": {
      "service_worker": "background.js",
      "type": "module"
   },
   "content_scripts": [
      {
         "matches": ["http://*/*", "https://*/*"],
         "js": ["content.js"]
      }
   ],
   "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
   "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
   },
   "web_accessible_resources": [
      {
         "resources": ["fonts/*.woff2", "assets/tw-meta.built.css"],
         "matches": ["<all_urls>"]
      }
   ]
}
